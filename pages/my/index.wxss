.main-wrapper{
  background: #edece8;
  height: 100vh;
}

.header{
  width: 100%;
  height: 25vw;
  padding: 2vw 10vw 7vw;
  background-color: #0af;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  box-sizing: border-box;
}

.avatarurl>image {
  width: 16vw;
  height: 16vw;
  border-radius: 50%;
}

.userinfo{
  margin-left: 3vw;
  color: white;
  padding: 2vw 0;
}

.name{
  display: inline-block;
  font-size: 30rpx;
  font-weight: bold;
}

.address{
  font-size: 25rpx;
}

.orderinfo{
  color: black;
  height: 8vh;
  line-height: 8vh;
  font-size: 30rpx;
  justify-content: space-around;
  font-weight: 400;
  background: white;
  margin-bottom: 1vh;
}

.activeinfo{
  height: 75vh;
  background: white;
}

.active-item{
  height:8vh;
  line-height:8vh;
  border-bottom:1rpx solid #ccc;
  font-size:30rpx;
  padding-left:3vw;
  font-weight: 400;
}
